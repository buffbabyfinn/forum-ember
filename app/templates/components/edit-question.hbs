{{#if updateQuestionForm}}
  <h4>Edit {{question.author}}'s Question:</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="body">Question</label>
          {{input value=body id="body" placeholder=question.body}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="notes">Additional Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button {{action 'updateQuestion' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
