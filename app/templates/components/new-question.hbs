{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="body">Question</label>
          {{input value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Additional Notes</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-default new-button" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
